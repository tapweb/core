{
	"name": "fuel/core",
	"description": "Fuel PHP Framework - Version 1 - PSR-4 Core Package",
	"keywords": ["fuel", "fuelphp", "v1", "core"],
	"homepage": "https://github.com/fuel/core",
	"license": "MIT",
	"authors": [
		{
			"name": "Fuel PHP Framework Development Team",
			"email": "team@fuelphp.com"
		}
	],
	"require": {
		"php": ">=5.5",
		"phpseclib/phpseclib": "^2.0.0",
		"paragonie/sodium_compat": "^1.6",
		"monolog/monolog": "1.18.*",
		"michelf/php-markdown": "1.7.0",
		"ext-fileinfo": "*"
	},
	"require-dev": {
		"codeception/codeception": "~2.0"
	},
	"autoload": {
		"psr-4": {
			"Fuel\\Core\\": "classes/"
		},
		"files": [
			"src/functions.php",
			"src/bootstrap.php"
		]
	}
}
